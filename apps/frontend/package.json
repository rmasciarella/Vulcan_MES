{
  "name": "@vulcan/frontend",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "e2e:codegen": "playwright codegen http://localhost:3000",
    "e2e:install": "playwright install --with-deps",
    "clean": "rm -rf .next node_modules",
    "generate-client": "../../scripts/generate-api-client.sh",
    "analyze": "ANALYZE=true pnpm build",
    "check-bundle": "node scripts/check-bundle-size.js"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "@tanstack/react-virtual": "^3.13.12",
    "@vulcan/domain": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^5.12.0",
    "@next/bundle-analyzer": "^15.4.6",
    "@playwright/test": "^1.48.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "eslint-config-next": "15.4.5",
    "postcss": "8.5.6",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwindcss": "^3.4.15",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
