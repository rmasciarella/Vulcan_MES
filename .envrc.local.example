# Personal direnv configuration example (DO NOT COMMIT SECRETS)
# Copy to .envrc.local and set your actual values
# Use: cp .envrc.local.example .envrc.local

# Database Configuration
export DATABASE_URL="postgresql://postgres:postgres@localhost:5432/vulcan"
export POSTGRES_SERVER="localhost" 
export POSTGRES_USER="postgres"
export POSTGRES_PASSWORD="postgres"
export POSTGRES_DB="vulcan"

# Backend Configuration
export PROJECT_NAME="Vulcan MES"
export SECRET_KEY="changeme-use-a-secure-key-in-production"
export BACKEND_CORS_ORIGINS='["http://localhost:3000"]'
export FIRST_SUPERUSER="admin@vulcan.com"
export FIRST_SUPERUSER_PASSWORD="changeme"

# Redis Cache
export REDIS_URL="redis://localhost:6379"

# Supabase Configuration
export SUPABASE_URL="https://your-project.supabase.co"
export SUPABASE_PUBLISHABLE_KEY="your-publishable-key"
export SUPABASE_SECRET="your-secret-key"

# Frontend Public Variables (derived from above)
export NEXT_PUBLIC_API_URL="http://localhost:8000"
export NEXT_PUBLIC_SUPABASE_URL="$SUPABASE_URL"
export NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="$SUPABASE_PUBLISHABLE_KEY"
export NEXT_PUBLIC_APP_NAME="$PROJECT_NAME"

# Environment
export ENVIRONMENT="local"