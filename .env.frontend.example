# =============================================================================
# FRONTEND-SPECIFIC ENVIRONMENT VARIABLES
# Variables used only by the Next.js frontend application
# =============================================================================

# Public API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Public Supabase Configuration (exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Frontend Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Development Tools
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# UI Configuration
NEXT_PUBLIC_APP_NAME=Vulcan MES
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_THEME=system

# External Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-id

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000